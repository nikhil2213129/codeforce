n = int(input())
d = []
for i in range(n):
    n1,n2 = map(int,input().split())
    d.append([n1,n2])
#print(d)
#d = [[0,3],[2,5],[4,2],[2,0]]
capacity = 0
result = 0
for i in range(len(d)):
    if i == 0:
        capacity = d[i][1]
        result = capacity
    else:
        capacity -= d[i][0]
        capacity += d[i][1]
        result = max(result,capacity)
print(result)
    
    
